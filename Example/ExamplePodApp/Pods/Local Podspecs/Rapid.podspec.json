  "homepage": "https://www.rapid.io",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Jan Schwarz": "jan.schwarz@strv.com"
  },
  "platforms": {
    "ios": "8.0"
  },
  "source": {
    "git": "https://github.com/Rapid-SDK/ios.git",
    "tag": "0.0.1"
  },
  "source_files": [
    "Rapid",
    "Rapid/**/*.{h,m,swift}"
  ],
  "public_header_files": "Rapid/**/*.h",
  "requires_arc": true,
  "pod_target_xcconfig": {
    "SWIFT_VERSION": "3"
  }
}
